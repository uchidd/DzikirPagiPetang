<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Petang12Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#FF627F8A">

            <LinearLayout
                android:gravity="center"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:textSize="15sp"
                        android:text="12"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Membaca (3x):"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:textColor="#FF627F8A"/>

                        <View
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="#FF627F8A"/>

                        <TextView
                            android:padding="5dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pagi12petangarab"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:textColor="#FF627F8A"
                            android:textSize="29sp"
                            android:textAlignment="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Artinya:"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:textColor="#FF627F8A"/>

                        <View
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="#FF627F8A"/>

                        <TextView
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pagi12petang"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:textColor="#FF627F8A"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/cvHitungPetang12"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvHitungPetang12"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:text="Tekan Untuk Menghitung"
                        android:textAlignment="center"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:textColor="#FF627F8A"
                        />

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:onClick="goToPetang11"
                        app:cardCornerRadius="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:textSize="15sp"
                            android:text="Sebelumnya"
                            android:textColor="#FF627F8A"/>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:onClick="goToBeranda"
                        app:cardCornerRadius="5dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:textSize="15sp"
                            android:textColor="#FF627F8A"
                            android:text="Beranda"/>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:onClick="goToPetang13"
                        app:cardCornerRadius="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:textSize="15sp"
                            android:textColor="#FF627F8A"
                            android:text="Selanjutnya"/>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>